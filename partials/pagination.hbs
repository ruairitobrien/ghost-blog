{{! Custom Pagination partial template}}
<nav class="pagination" role="pagination">
	{{#if prev}}
		<a class="newer-posts" href="{{page_url prev}}"><span class="fa fa-angle-double-left"></span> Newer Posts</a>
	{{/if}}
	<span class="page-number">Page {{page}} of {{pages}}</span>
	{{#if next}}
		<a class="older-posts" href="{{page_url next}}">Older Posts <span class="fa fa-angle-double-right"></span></a>
	{{/if}}
</nav>