{{!< default}}
{{! Top line inserts this template on main layout}}

{{! Post template }}
{{#post}}
<main id="main-personal" class="full-size-container">
	<article id="post-page-personal" class="{{post_class}}">

		<header id="post-header-personal" class="post-head archivo-bold">
			<div class="post-meta-info">
				<time class="post-date">{{date format="MMMM DD, YYYY"}}</time> 

				{{#if tags}}
				<div class="post-tags">
					{{tags separator=" "}}
				</div>
				{{/if}}
			</div>

			<h1 class="post-title">{{title}}</h1>
		</header>

		{{#if feature_image}}
		<div class="post-cover-personal">
			<div class="background-cover" style="background-image:url({{img_url feature_image}})">
				<div class="diffuser"></div>
			</div>
			<div class="center-cover" style="background-image:url({{img_url feature_image}})"></div>
		</div>
		{{/if}}

		<section id="post-content-personal" class="content-column">
			{{content}}
		</section>
 
		<footer id="post-footer-personal">
			<div class="author-share">
				<section class="post-author">
					{{#author}}
					{{#if profile_image}}
					<img class="author-pic" src="{{img_url profile_image}}" alt="{{name}}">
					{{/if}}

					<h4 class="author-name libre-bold"><a href="{{url}}">{{name}}</a></h4>

					<div class="author-location-social archivo-bold">
						{{#if twitter}}
						<a class="author-twitter" href="{{twitter_url}}">Twitter</a>
						{{/if}}

						{{#if facebook}}
						<a class="author-facebook" href="{{facebook_url}}">Facebook</a>
						{{/if}}
					</div>

					{{#if bio}}
					<p class="author-bio">{{bio}}</p>
					{{/if}}
					{{/author}}
				</section><section class="share-post">
					<h4 class="share-label libre-bold">Share this post</h4>

					<a class="share-link twitter"
					href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
					onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
						<span class="fa fa-twitter"></span>
					</a>
					<a class="share-link facebook"
					href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
					onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
						<span class="fa fa-facebook"></span>
					</a>
					<a class="share-link google-plus"
					href="https://plus.google.com/share?url={{url absolute="true"}}"
					onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
						<span class="fa fa-google-plus"></span>
					</a>
				</section>
			</div>
		
			{{#get "posts" filter="featured:true" limit="3" as |featured|}}
			<aside class="featured-posts">
				<h3>Last Featured Posts</h3>
				{{#foreach featured}}
				<article>
					<h4 class="libre-bold"><a href="{{url}}">{{title}}</a></h4>
					<p>{{excerpt words="38"}}...</p>
				</article>
				{{/foreach}}
			</aside>
			{{/get}}

			<section id="comments-area-in-post" class="content-column"></section>
		</footer>
	</article>
</main>
{{/post}}